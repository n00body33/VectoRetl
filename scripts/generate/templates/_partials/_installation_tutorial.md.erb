<Tabs
  block={true}
  defaultValue="<%= strategies.first.name.parameterize %>"
  values={<%= strategies.collect { |strategy| {label: "As a #{strategy.title}", value: strategy.name.parameterize } }.to_json %>}>
<%- strategies.each do |strategy| -%>
<TabItem value="<%= strategy.name.parameterize %>">

<%- if show_deployment_strategy -%>
<%= deployment_strategy(strategy, platform: platform) %>

---
<%- end -%>

<%- interfaces_style = interfaces.length > 4 -%>
<Tabs
  block={<%= !interfaces_style.to_json %>}
  centered={true}
  placeholder="Please choose an installation method..."
  select={<%= interfaces_style.to_json %>}
  size="lg"
  values={<%= interfaces.collect { |interface| {group: interface.type.humanize.pluralize, label: interface.title, value: interface.name } }.to_json %>}>
<%- interfaces.each do |interface| -%>
<TabItem value="<%= interface.name %>">

<%- source = metadata.sources.send(strategy.source) -%>
<%= interface_installation_tutorial(interface, source: source, heading_depth: heading_depth) %>

</TabItem>
<%- end -%>
</Tabs>
</TabItem>
<%- end -%>
</Tabs>
